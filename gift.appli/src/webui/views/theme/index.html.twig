{% extends "base/base.html.twig" %}

{% block body %}
    <div class="mb-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-2">Thèmes :</h2>
        <div class="flex flex-wrap gap-2">
            {% for theme in themes %}
                <button data-target="theme-{{ theme.id }}"
                   class="themes-buttons px-3 py-1 bg-purple-100 text-purple-800 rounded hover:bg-purple-200 transition">
                    {{ theme.libelle }}
                </button>
            {% else %}
                <p class="text-gray-500">Aucun thème disponible.</p>
            {% endfor %}
        </div>
    </div>

    {% include "theme/theme_by_id.html.twig" %}
    {% include "theme/script.html.twig" %}
{% endblock %}


{% extends "base/base.html.twig" %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">Créer une Box à partir d'un Modèle</h1>

        <form action="{{url_for('creer_box_modele') }}" method="post" class="bg-white shadow-md rounded-lg p-6">
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="modele">
                    Sélectionnez un Modèle
                </label>
                <select class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="modele" name="modele">
                    <option value="">-- Sélectionnez un modèle --</option>
                    <option value="modele1">Modèle 1</option>
                    <option value="modele2">Modèle 2</option>
                    <option value="modele3">Modèle 3</option>
                </select>
            </div>

            <div class="mb-6">
                <button class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                    Créer la Box
                </button>
            </div>
        </form>
    </div>
{% endblock %}


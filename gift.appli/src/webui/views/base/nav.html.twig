<!-- Wrapper général pour avoir une mise en page avec sidebar fixe -->
<div class="flex min-h-screen">

    <div class="w-64 bg-purple-700 text-white p-6 shadow-lg fixed inset-y-0 left-0 z-10">
        <h2 class="text-2xl font-extrabold mb-8 tracking-wide">
            <a href="{{ url_for('homepage') }}">
                🎁 Giftbox
            </a>
        </h2>

        <nav>
            <ul class="space-y-3">
                <li>
                    <a href="{{ url_for('homepage') }}"
                       class="flex items-center gap-2 px-3 py-2 rounded hover:bg-purple-600 transition">
                        🏠 Accueil
                    </a>
                </li>
                <li>
                    <a href="{{ url_for('categories') }}"
                       class="flex items-center gap-2 px-3 py-2 rounded hover:bg-purple-600 transition">
                        📦 Catégories
                    </a>
                </li>
                <li>
                    <a href="{{ url_for('themes') }}"
                       class="flex items-center gap-2 px-3 py-2 rounded hover:bg-purple-600 transition">
                        🎨 Thèmes
                    </a>
                </li>
                <li>
                    <a href="{{ url_for("prestations") }}"
                       class="flex items-center gap-2 px-3 py-2 rounded hover:bg-purple-600 transition">
                        🗿 Préstations
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <div class="flex-1 ml-64 p-8">
        {% block body %}
        {% endblock %}
    </div>
</div>

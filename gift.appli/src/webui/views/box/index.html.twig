{% extends "base/base.html.twig" %}

{% block body %}
    <div class="mb-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-2">Mes Box :</h2>
        <div class="flex flex-wrap gap-2">
            {% for box in boxes %}
                <button
                        data-target="box-{{ box.id }}"
                        class="box-button px-3 py-1 bg-blue-100 text-blue-800 rounded hover:bg-blue-200 transition">
                    {{ box.libelle }}
                </button>
            {% else %}
                <p class="text-gray-500">Aucune box disponible.</p>
            {% endfor %}
        </div>
    </div>

    {% include "box/box_by_id.html.twig" %}
    {% include "box/script.html.twig" %}
{% endblock %}

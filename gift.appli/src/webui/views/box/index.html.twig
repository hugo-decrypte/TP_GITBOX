{% extends "base/base.html.twig" %}

{% block body %}
    <div class="mb-6 p-5">
            <h2 class="text-xl font-semibold text-gray-800 mb-6">Liste des Box validées :</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                {% for box in boxes %}
                    {% if box.statut == 0 %}
                        <div class="bg-white border border-violet-200 rounded-2xl shadow-md p-4 flex flex-col justify-between hover:shadow-lg hover:bg-gray-300 transition duration-200">
                            <button data-target="box-{{ box.id }}" class="box-button text-lg font-bold text-violet-800 mb-2">
                                {{ box.libelle }}
                            </button>
                        <form method="post" action="{{ url_for('myBox') }}">
                            <input type="hidden" name="id" value="{{ box.id }}">
                            <button type="submit" class="w-full py-2 px-4 bg-green-600 text-white rounded-xl hover:bg-green-800 transition duration-150">
                                Valider
                            </button>
                        </form>
                    </div>
                {% endif %}
            {% else %}
                <p class="text-gray-500 col-span-full text-center">Aucune box disponible.</p>
            {% endfor %}
        </div>
    </div>

    <div class="mb-6 p-5">
        <h2 class="text-xl font-semibold text-gray-800 mb-6">Liste des Box validées :</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {% for box in boxes %}
                {% if box.statut != 0 %}
                    <div class="bg-white border border-violet-200 rounded-2xl shadow-md p-4 flex flex-col justify-between hover:shadow-lg hover:bg-gray-300 transition duration-200">
                        <button data-target="box-{{ box.id }}" class="box-button text-lg font-bold text-violet-800 mb-2">
                            {{ box.libelle }}
                        </button>
                    </div>
                {% endif %}
            {% else %}
                <p class="text-gray-500 col-span-full text-center">Aucune box disponible.</p>
            {% endfor %}
        </div>
    </div>

    {% include "box/box_by_id.html.twig" %}
    {% include "box/script.html.twig" %}
{% endblock %}

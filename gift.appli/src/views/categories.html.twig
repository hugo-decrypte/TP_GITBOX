{% extends "base/base.html.twig" %}

{% block body %}
    <div class="mb-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-2">Catégories :</h2>
        <div class="flex flex-wrap gap-2">
            {% for category in categories %}
                <a href="{{ url_for("categoryById",{id:category.id}) }}"
                   class="px-3 py-1 bg-purple-100 text-purple-800 rounded hover:bg-purple-200 transition">
                    {{ category.libelle }}
                </a>
            {% else %}
                <p class="text-gray-500">Aucune catégorie disponible.</p>
            {% endfor %}
        </div>
    </div>

    {% block details %}
        <div class="mt-6 text-gray-600 italic">
            <p>Sélectionnez une catégorie pour voir les coffrets-types associés.</p>
        </div>
    {% endblock %}
{% endblock %}

{% extends "category_by_id.html.twig" %}

{% block button %}
    <a
            class="px-3 py-1 bg-purple-100 text-purple-800 rounded hover:bg-purple-200 transition"
            href="{{ url_for("categoryById",{id:category.id}) }}">
        Ne plus voir les préstations de cette catégorie
    </a>
{% endblock %}

{% block prestations %}
    <div class="mt-8">
        <h2 class="text-xl font-bold text-purple-700 mb-4">
            Prestations pour la catégorie : {{ category.libelle|upper }}
        </h2>

        {% if prestations is not empty %}
            <ul class="space-y-3">
                {% for p in prestations %}
                    <li class="p-4 bg-white shadow rounded flex justify-between items-center">
                        <a href="{{ url_for("prestation") }}?id={{ p.id }}" class="font-medium text-gray-800">{{ p.libelle|e }}</a>
                        <span class="text-green-600">{{ p.tarif|number_format(2, ',', ' ') }} €</span>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p class="text-gray-500 italic">Aucune prestation disponible pour cette catégorie.</p>
        {% endif %}
    </div>
{% endblock %}

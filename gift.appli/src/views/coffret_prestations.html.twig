{% extends "coffrets_types.html.twig" %}

{% block title %}{{ coffret.libelle }} - Prestations{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto mt-10 space-y-4">
        <h1 class="text-3xl font-bold text-purple-600">{{ coffret.libelle }}</h1>
        <p class="text-gray-700">{{ coffret.description }}</p>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
            {% for prestation in prestations %}
                <div class="p-4 border rounded shadow">
                    <h2 class="text-xl font-semibold">{{ prestation.libelle }}</h2>
                    <p>{{ prestation.description }}</p>
                    <p class="text-sm text-gray-600">Tarif : {{ prestation.tarif }} €</p>
                </div>
            {% else %}
                <p>Aucune prestation liée à ce coffret.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
